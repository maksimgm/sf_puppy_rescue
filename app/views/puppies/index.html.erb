<h1 class="text-center">All Puppies</h1>
<div class="container ">
  <div class="row well">
    <% @puppies.each do |p| %>
      <div class="col-xs-4">
        <div class="thumbnail">
          <h3 class="text-center"><%p.name%></h3>
          <%= link_to p do %>
            <img src="<%= p.image_url%>" alt="">
          <% end %>
          <div class="caption">
            <p>
              <h5 >Name:<span class="pull-right"><%=p.name%></span></h5>
              
            </p>
            <p>
              <h5>Age:<span class="pull-right"><%=p.age%></span></h5>
              
            </p>
            <p>
              <h5>Bio:</h5>
              <%=p.bio%>
            </p>
            <!-- Why cant i edit color of font withput puttin a class? -->
              <button class="btn btn-success "><%= link_to "Edit", edit_puppy_path(p) %></button>
              <button class="btn btn-warning text-muted"><%= link_to "Destroy", p, method: :delete, data: {confirm: "Are you sure?"} %></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>