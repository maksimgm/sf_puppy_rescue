<%= form_for @puppy, {:class => "form-horizontal center"} do |p|%>
 <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <% if @puppy.errors.any? %>
        <div class="alert alert-warning error-wrapper">
          <% @puppy.errors.full_messages.each do |error| %>
            <p class="text-danger">
              <%= error%>
            </p>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
   
     <div class="row well">
      <div class="form-group">
        <%= p.label :name, class: "col-xs-3 control-label" %>
        <div class="col-xs-9">
          <%= p.text_field :name, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= p.label :age, class: "col-xs-3 control-label" %>
        <div class="col-xs-9">
          <%= p.text_field :age, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= p.label :bio, for: "comment" ,class: "col-xs-3 control-label" %>
        <div class="col-xs-9">
          <%= p.text_area :bio, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= p.label :image_url, class: "col-xs-3 control-label" %>
        <div class="col-xs-9">
          <%= p.text_field :image_url, class: "form-control" %>
        </div>
      </div>
      <div class="col-xs-10 col-xs-offset-1 showBtn">
        <%= p.submit  class: "btn btn-primary btn-hover btn-block btn-lg" %>
      </div>
    </div>
  </div>
<%end%>